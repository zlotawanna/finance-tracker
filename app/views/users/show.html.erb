<div class="container justify-content-md-center">
  <h1>User</h1>
</div>

<div class="form-group row">
  <div class="col-2 text-right mt-2"><h6>Users:</h6></div>
  <div class="col-sm-8 no-right-padding">
    <table class="table table-hover">
      <tbody>
          <tr>
            <td scope="row"><strong>Name: </strong> <%= @user.full_name %></td>
            <td><strong>Email: </strong> <%= @user.email %></td>
            <td>
              <% if current_user.not_friend_with?(@user.id) %>
                <%= link_to 'Follow', friendships_path(friend: @user),
                                  class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span>Your friend</span>
              <% end %>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>
<% end %>
